/**index.wxss**/
page{
  background-color: #F2F2F2;
}
/* 地址定位 */
.page_hd{
  width: 100%;
  height: auto;
  position:fixed;
  top:0;
  left: 0;
  z-index: 10;
}
.address{
  width: 100%;
  height: 80rpx;
  background-color: #58ACFA;
}
.index-botton{
  width: 100%;
  height: 100rpx;
  position:fixed;
  bottom:0;
  left: 0;
  z-index: 10;
  background-color:white;
}
.address_icon{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.address_icon2{
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-top: 20rpx;
}
.address_icon3{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.address_text{
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 60%;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 29rpx;
  color: white;
}

/* 下单界面 */
.page_bd{
  width: 100%;
  z-index: 1;
  padding-top: 180rpx;
  padding-bottom: 150rpx;
}
.mar-top{
  width: 95%;
  margin: 0 auto;
  margin-top: 20rpx;  
}
.message_color{
  color: rgba(0, 0, 0, 0.4);
}
.weui-cells{
  font-size: 29rpx;
}
.textarea-wrp textarea{
  color: rgba(0, 0, 0, 0.4);
  line-height: 20px;
  font-size: 16px;
}
.Paste{
  width: 100%;
  height: 50rpx;
}
.text_img{
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-right: 32rpx;
}
.delete{
  width: 40rpx;
  height: 40rpx;
}
.sub{
  float: right;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;  
  color: white;
  background-color: #58ACFA;
}
.price{
  float: left;
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
}